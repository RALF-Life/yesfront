{
  "$if": {
    "Event": {
      "Description": {
        "parameters": [],
        "returns": "string"
      },
      "Summary": {
        "parameters": [],
        "returns": "string"
      },
      "URL": {
        "parameters": [],
        "returns": "string"
      },
      "Categories": {
        "parameters": [],
        "returns": "string"
      },
      "Location": {
        "parameters": [],
        "returns": "string"
      },
      "HasAttendee": {
        "parameters": [
          {
            "mail": "string"
          }
        ],
        "returns": "bool"
      }
    },
    "Date": {
      "IsMonday": {
        "parameters": [],
        "returns": "bool"
      },
      "IsTuesday": {
        "parameters": [],
        "returns": "bool"
      },
      "IsWednesday": {
        "parameters": [],
        "returns": "bool"
      },
      "IsThursday": {
        "parameters": [],
        "returns": "bool"
      },
      "IsFriday": {
        "parameters": [],
        "returns": "bool"
      },
      "IsSaturday": {
        "parameters": [],
        "returns": "bool"
      },
      "IsSunday": {
        "parameters": [],
        "returns": "bool"
      },
      "IsAfter": {
        "parameters": [
          {
            "time": "time"
          }
        ],
        "returns": "bool"
      }
    }
  },
  "$actions": {
    "filters/filter-out": {},
    "filters/filter-in": {},
    "actions/regex-replace": {
      "case-sensitive": {
        "type": "bool",
        "required": false,
        "default": true
      },
      "match": {
        "type": "string",
        "required": true
      },
      "replace": {
        "type": "string",
        "required": true
      },
      "in": {
        "type": "list",
        "default": [
          "description"
        ],
        "required": false
      }
    },
    "actions/clear-alarms": {},
    "actions/add-alarm": {
      "action": {
        "type": "string",
        "required": true
      },
      "trigger": {
        "type": "string",
        "required": true
      },
      "duration": {
        "type": "string",
        "required": false,
        "default": ""
      },
      "repeat": {
        "type": "string",
        "required": false,
        "default": ""
      }
    },
    "actions/clear-attendees": {
      "attendees": {
        "type": "bool",
        "required": false,
        "default": true
      },
      "organizer": {
        "type": "bool",
        "required": false,
        "default": false
      }
    },
    "actions/add-attendee": {
      "mail": {
        "type": "string",
        "required": true
      },
      "status": {
        "type": "enum",
        "required": false,
        "values": [
          "needs-action",
          "accepted",
          "declined",
          "delegated",
          "completed",
          "in-progress"
        ]
      },
      "role": {
        "type": "enum",
        "required": false,
        "values": [
          "chair",
          "required",
          "optional",
          "non-participant"
        ]
      }
    }
  }
}
